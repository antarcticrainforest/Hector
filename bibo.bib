@Article{Schafer2001,
  Title                    = {Boundary Layer Development over a Tropical Island during the Maritime Continent Thunderstorm Experiment},
  Author                   = {Schafer, Robert and May, Peter T. and Keenan, Thomas D. and McGuffie, Kendal and Ecklund, Warner L. and Johnston, Paul E. and Gage, Kenneth S.},
