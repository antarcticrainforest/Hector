@Article{Dauhut2016,
  Title                    = {Giga-LES of Hector the Convector and Its Two Tallest Updrafts up to the Stratosphere},
  Author                   = {Dauhut, Thibaut and Chaboureau, Jean-Pierre and Escobar, Juan and Mascart, Patrick},
  Journal                  = {Journal of the Atmospheric Sciences},
